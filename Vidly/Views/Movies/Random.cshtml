@using Vidly.Models
@model Vidly.ViewModels.RandomMovieViewModel


@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* The Razor Engine can read HTML - https://localhost:44354/Movies/Random *@

@*<h2>@Model.Name</h2>*@

@*Importing the data using the ViewDataDictionary method - see the RouteConfig and Controller*@
@*   <h2>@( ((Movie) ViewData["Movie"]).Name )</h2>  *@

@*   If 5 or more customers have rented this movie, assign the class 'POPULAR', otherwise don't assign the class   *@

@{
    var className = Model.Customers.Count > 5 ? "popular" : null;
}

<h2 class="@className">@Model.Movie.Name</h2>


@* If the number of customers who have rented this movie is equal to zero, display the message, otherwise list all the customers' names that have rented it *@
@if (Model.Customers.Count == 0)
{
    <p>No one has rented this movie before.</p>
}
else
{
    <ul>

        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }


    </ul>


}

